/* pages/authorize/authorize.wxss */
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

page {
  background: #ffffff;
}

.guide {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.guide .t {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 25rpx;
  line-height: 15rpx;
  color: #666;
}

.guide .inputText {
  margin-top: 4px;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  /* align-items: center; */
  padding: 12px 0px 8px;
  gap: 5px;
  /* height: 68px; */
  width: 343px;
  box-shadow: 0px 0.5px 0px rgba(204, 204, 204, 0.5);
}
.guide .p {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 30rpx;
  line-height: 15rpx;
  color: #666;
}

.guide .type1 {
  margin-top: 18rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 50%;
  font-size: 30rpx;
  color: #000000;
  background-color: #f6f6f6;
  align-items: left;
  padding-top: 8rpx;
  padding-bottom: 8rpx;

  height: 75rpx;
  line-height: 60rpx;

  border: 0;
  border-radius: 30px;
}

.guide .btnhover {
  background-color: #4f80ff;
  color: #ffffff;
  border: 0;
  border-radius: 30px;
}

/* .guide .type1::after{
  border: 1px solid #E3BD4A;
} */

.guide .nav .end {
  margin-right: unset;
  margin-top: 40rpx;
  text-align: center;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-content: space-between;
  font-size: 35rpx;
  font-weight: bold;
  height: 100rpx;
  background-color: #4f80ff;
  border: 0;
  color: #ffffff;
  border-radius: 10px;
  align-items: center;
  justify-content: center;
}
