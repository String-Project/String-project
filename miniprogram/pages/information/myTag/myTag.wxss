.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}



page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.guide {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.guide .headline {
  font-size: 37rpx;
  font-weight: bold;
  color: #555;
  line-height: 40rpx;
}

.guide .p {
  margin-top: 30rpx;
  margin-bottom: 15rpx;
  font-size: 32rpx;
  line-height: 56rpx;
  color: #666;
}

.guide .type1{
  margin-top: 18rpx;
  text-align: left;
  padding-left: 80rpx;
  width: 100%;
  font-size: 35rpx;
  font-weight: bold;
  color:#5e5b5b;
  align-items: center;
  justify-content: center;
  padding-top: 10rpx;
  height: 85rpx;
  background-color: beige;
  line-height: 60rpx;
}

.guide .btnhover {
background-color: #E3BD4A;
border-radius: 1rpx;
}

