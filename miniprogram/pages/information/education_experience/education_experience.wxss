.infoContainer {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* vertical-align: center; */
}

.nextButton {
  position: absolute;
  left: 16px;
  top: 628px;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 11px 137px;
  gap: 10px;

  height: fit-content;
  width: 343px;

  background: #4f80ff;
  border-radius: 10px;
}

.nextText {
  font-family: "PingFang SC";
  font-style: normal;
